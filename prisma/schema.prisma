generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  SOCIETY
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  ALL
}

enum BookingStatus {
  PENDING
  ACCEPT
  REJECT
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  phone     String
  role      Role      @default(SOCIETY)
  profile_picture String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  kos       Kos[]
  books     Book[]
  reviews   Review[]
}

model Kos {
  id              Int       @id @default(autoincrement())
  user_id         Int
  name            String
  address         String
  price_per_month Int
  gender          Gender    @default(ALL)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user            User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  images          KosImage[]
  facilities      KosFacility[]
  reviews         Review[]
  books           Book[]

  @@index([user_id])
}

model KosImage {
  id        Int       @id @default(autoincrement())
  kos_id    Int
  file      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  kos       Kos       @relation(fields: [kos_id], references: [id], onDelete: Cascade)

  @@index([kos_id])
}

model KosFacility {
  id        Int       @id @default(autoincrement())
  kos_id    Int
  facility  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  kos       Kos       @relation(fields: [kos_id], references: [id], onDelete: Cascade)

  @@index([kos_id])
}

model Review {
  id        Int       @id @default(autoincrement())
  kos_id    Int
  user_id   Int
  comment   String    @db.Text
  bintang   Int   
  reply     String?   @db.Text
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  kos       Kos       @relation(fields: [kos_id], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([kos_id])
  @@index([user_id])
}

model Book {
  id        Int           @id @default(autoincrement())
  kos_id    Int
  user_id   Int
  start_date DateTime
  end_date  DateTime
  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  // Relations
  kos       Kos           @relation(fields: [kos_id], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([kos_id])
  @@index([user_id])
}
